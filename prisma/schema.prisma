// prisma/schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  applications Application[]
  createdAt   DateTime     @default(now())
}

model Application {
  id          Int       @id @default(autoincrement())
  companyName String
  roleTitle   String
  status      Status
  appliedDate DateTime
  notes       String?
  jobUrl      String?
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime  @default(now())
}

enum Status {
  APPLIED
  INTERVIEW
  REJECTED
  OFFER
  ACCEPTED
}